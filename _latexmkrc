$latex            = 'uplatex %O -synctex=1 -kanji=utf8 -no-guess-input-enc %S -halt-on-error';
$latex_silent     = 'uplatex %O -synctex=1 -kanji=utf8 -no-guess-input-enc %S -halt-on-error -interaction=batchmode';
$biber            = 'biber %O --bblencoding=utf8 -u -U --output_safechars %B';
$bibtex           = 'upbibtex %O %B';
$makeindex        = 'upmendex %O -o %D %S';
$dvipdf           = 'dvipdfmx %O -o %D %S';
#$max_repeat      = 5;
$pdf_mode	      = 3; # generates pdf via dvipdfmx

